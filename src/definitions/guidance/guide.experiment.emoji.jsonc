{
    "emoji":{
        "name":"Emoji Translarion",
        "prompt":"communicate evocatively using only emojis",
        "type":"diction",
        "description":"chosing emoji representations of words",
        "audience":["computer geek"],
        "alias":["symbolism","iconography"],
        "for":["communication"],
        "weight":{
            "pos":["evocative","interpretative","symbolic"],
            "neg":["literal","specific"]
        },
        "ref": {
            "type": "when-instead-arr",
            "examples": [
                {
                    "name": "greeting",
                    "when": ["hey", "hello", "hi", "g'day", "yo", "howdy"],
                    "instead": [
                        ["👋", "Universal recognition across platforms"],
                        ["🖐️", "Casual modern variation of waving"],
                        ["🙏", "Respectful greeting in many Asian cultures"]
                    ]
                },
                {
                    "name": "software anomalies",
                    "when": ["bug", "glitch", "crash", "defect"],
                    "instead": [
                        ["🐛", "Universal dev community symbol"],
                        ["⚠️", "Clear warning indication"],
                        ["🤖💥", "Robot explosion for catastrophic failure"]
                    ]
                },
                {
                    "name": "novelty",
                    "when": ["new", "fresh", "update", "feature"],
                    "instead": [
                        ["✨", "Immediate visual cue for novelty"],
                        ["🆕", "Standard 'new' label symbol"],
                        ["🌱", "Growth metaphor for early-stage features"]
                    ]
                },
                {
                    "name": "globalization",
                    "when": ["Internationalization", "localization", "i18n", "l10n"],
                    "instead": [
                        ["🌐", "Direct globe representation"],
                        ["🗺️", "Detailed geographical context"],
                        ["👂🌍", "Ear + globe = language adaptation"]
                    ]
                },
                {
                    "name": "dependency management",
                    "when": ["pinning versions", "lockfile", "freeze dependencies"],
                    "instead": [
                        ["📌", "Physical pinning metaphor"],
                        ["🔒", "Security/stability connotation"],
                        ["⏸️", "Pause symbol for version freezing"]
                    ]
                },
                {
                    "name": "containerization",
                    "when": ["docker", "container", "podman", "k8s"],
                    "instead": [
                        ["🐳", "Docker's official mascot"],
                        ["📦", "Generic packaging symbol"],
                        ["🚢", "Cargo transport metaphor"]
                    ]
                },
                {
                    "name": "code maintenance",
                    "when": ["refactoring", "rewrite", "cleanup", "optimize"],
                    "instead": [
                        ["♻️", "Standard recycling symbol"],
                        ["🧼", "Cleaning metaphor"],
                        ["🦾", "Mechanical improvement concept"]
                    ]
                },
                {
                    "name": "development status",
                    "when": ["in progress", "WIP", "unstable", "prototype"],
                    "instead": [
                        ["🚧", "Universal construction warning"],
                        ["🔩", "Mechanical assembly process"],
                        ["🧪", "Experimental development phase"]
                    ]
                },
                {
                    "name": "version control",
                    "when": ["version", "release", "tag", "v1.0"],
                    "instead": [
                        ["🔖", "Bookmark-style tagging"],
                        ["🏷️", "Labeling system metaphor"],
                        ["⏱️", "Time-based version tracking"]
                    ]
                },
                {
                    "name": "affection",
                    "when": ["love", "passion", "devotion", "crush"],
                    "instead": [
                        ["❤️🔥", "Intense burning passion"],
                        ["💘", "Standard love symbol"],
                        ["🤝❤️", "Connection + heart = mutual affection"]
                    ]
                },
                {
                    "name": "recognition",
                    "when": ["good job", "well done", "kudos", "nailed it"],
                    "instead": [
                        ["🏆", "Ultimate achievement symbol"],
                        ["👑", "Crowning success metaphor"],
                        ["🎖️", "Military-grade recognition"]
                    ]
                },
                {
                    "name": "problem solving",
                    "when": ["complex problem", "challenge", "brain teaser", "puzzle"],
                    "instead": [
                        ["🕸️💡", "Web of complexity + solution"],
                        ["🧩", "Piece assembly metaphor"],
                        ["⚡🧠", "Mental breakthrough symbol"]
                    ]
                },
                {
                    "name": "cognition",
                    "when": ["thinking", "contemplating", "pondering", "analyzing"],
                    "instead": [
                        ["🐢💭", "Slow deliberate processing"],
                        ["🤔", "Universal thinking emoji"],
                        ["🧠⚗️", "Mental chemistry metaphor"]
                    ]
                }
            ]
        }
    }
}